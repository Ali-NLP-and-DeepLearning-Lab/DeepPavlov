{
  "chainer": {
    "in": ["texts", "filenames"],
    "pipe": [
      {
        "class_name": "nemo_tts",
        "model_path": "{TTS_PATH}/tacotron2_waveglow.yaml",
        "checkpoints_dir": "{TTS_PATH}",
        "in": ["texts"],
        "out": ["audio_batch"]
      },
      {
        "class_name": "wav_saver",
        "wav_dir": "/data/nemo/workdir",
        "in": ["audio_batch", "filenames"],
        "out": ["file_names"]
      }
    ],
    "out": ["file_names"]
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "NEMO_PATH": "{ROOT_PATH}/models/nemo",
      "TTS_PATH": "{NEMO_PATH}/tacotron2_waveglow"
    },
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/nemo-asr.txt",
      "{DEEPPAVLOV_PATH}/requirements/nemo-tts.txt"
    ],
    "download": [
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/nemo/tacotron2_waveglow.tar.gz",
        "subdir": "{NEMO_PATH}"
      }
    ]
  }
}
