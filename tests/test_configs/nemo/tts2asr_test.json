{
  "chainer": {
    "in": ["texts", "filenames"],
    "pipe": [
      {
        "class_name": "nemo_tts",
        "model_path": "{TTS_PATH}/tacotron2_waveglow.yaml",
        "checkpoints_dir": "{TTS_PATH}",
        "in": ["texts"],
        "out": ["audio_batch"]
      },
      {
        "class_name": "bytes_saver",
        "save_path": "{DEEPPAVLOV_PATH}/../tests",
        "in": ["audio_batch", "filenames"],
        "out": ["saved_file_path"]
      },
      {
        "class_name": "nemo_asr",
        "model_path": "{NEMO_PATH}/quartznet15x5/quartznet15x5.yaml",
        "checkpoints_dir": "{NEMO_PATH}/quartznet15x5",
        "in": ["saved_file_path"],
        "out": ["transcription"]
      }
    ],
    "out": ["transcription", "saved_file_path"]
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "NEMO_PATH": "{ROOT_PATH}/models/nemo",
      "TTS_PATH": "{NEMO_PATH}/tacotron2_waveglow"
    },
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/nemo-asr.txt",
      "{DEEPPAVLOV_PATH}/requirements/nemo-tts.txt"
    ],
    "download": [
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/nemo/tacotron2_waveglow.tar.gz",
        "subdir": "{NEMO_PATH}"
      },
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/nemo/quartznet15x5.tar.gz",
        "subdir": "{NEMO_PATH}"
      }
    ]
  }
}